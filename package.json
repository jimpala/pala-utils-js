{
  "name": "@palatech/pala-utils",
  "version": "0.0.1",
  "description": "Utilities for Pala JavaScript projects.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpyne17/pala-utils-js.git"
  },
  "author": "James Pyne",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpyne17/pala-utils-js/issues"
  },
  "homepage": "https://github.com/jpyne17/pala-utils-js#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@types/lodash": "^4.14.144",
    "@types/react": "^16.9.11",
    "@types/react-native": "^0.60.22",
    "@types/yup": "^0.26.24",
    "commitlint": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-satya164": "^3.1.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "react": "^16.11.0",
    "react-native": "^0.61.3",
    "react-navigation": "^4.0.10",
    "yup": "^0.27.0"
  },
  "files": [
    "lib/**/*"
  ]
}
